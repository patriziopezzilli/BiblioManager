    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.biblio.servlets.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneRece</servlet-name>

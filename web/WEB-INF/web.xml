    <servlet>
        <servlet-name>Inserimento_Ristampa</servlet-name>
        <servlet-class>it.biblio.servlets.Inserimento_Ristampa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Ricerca</servlet-name>
        <servlet-class>it.biblio.servlets.Ricerca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Aboutus</servlet-name>
        <servlet-class>it.biblio.servlets.Aboutus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Modificapub</servlet-name>
        <url-pattern>/modificapub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.biblio.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.biblio.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneRece</servlet-name>
        <url-pattern>/gestionerecensioni</url-pattern>
    </servlet-mapping>
